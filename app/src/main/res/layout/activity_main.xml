<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#000000"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.miniproject.omniwheels.MainActivity" >

<android.support.percent.PercentRelativeLayout
    android:id="@+id/percent_frame"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"

        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="50sp"
        android:textStyle="bold"
        android:text="@string/omniwheels"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/up"

        app:layout_marginLeftPercent="37%"
        app:layout_marginTopPercent="25%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="0"
        android:background="@drawable/direction" />

    <Button
        android:id="@+id/down"

        app:layout_marginLeftPercent="37%"
        app:layout_marginTopPercent="75%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="180"
        android:background="@drawable/direction" />

    <Button
        android:id="@+id/left"

        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="0%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="270"
        android:background="@drawable/direction" />

    <Button
        android:id="@+id/right"

        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="75%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="90"
        android:background="@drawable/direction"/>

    <Button
        android:id="@+id/topLeft"

        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="0%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="315"
        android:background="@drawable/direction" />

    <Button
        android:id="@+id/topRight"

        app:layout_marginTopPercent="25%"
        app:layout_marginLeftPercent="75%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="45"
        android:background="@drawable/direction"/>

    <Button
        android:id="@+id/bottomLeft"

        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="0%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="225"
        android:background="@drawable/direction" />

    <Button
        android:id="@+id/bottomRight"

        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="75%"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:rotation="135"
        android:background="@drawable/direction"/>

</android.support.percent.PercentRelativeLayout>

</FrameLayout>




































